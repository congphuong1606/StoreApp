<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_avatar_post_store"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/ic_noavatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/btn_menu"
            android:layout_toRightOf="@+id/imv_avatar_post_store"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="CƠ KHÍ MINH ÁI"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_post_time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="10:30 sáng"
                android:textColor="#d6c7c7" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_optionxml"
            android:gravity="center_vertical"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="abifbibcfobc\nfvrffrev\nf\nfecvf\ndfvfev\n\nsc\n\cdb" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view_heart_post"
                android:layout_width="0.1dp"
                android:layout_height="0.1dp"
                android:layout_centerInParent="true"
                android:background="@null">

            </View>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imv_post_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:viewAspectRatio="1"
                app:placeholderImage="@drawable/ic_no_image"
                android:padding="2dp"
                app:actualImageScaleType="fitCenter"
                app:fadeDuration="300" />
            <!--<me.relex.photodraweeview.PhotoDraweeView-->
                <!--android:id="@+id/imv_post_image"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:actualImageScaleType="fitCenter"-->
                <!--app:placeholderImage="@drawable/ic_no_image"-->
                <!--app:placeholderImageScaleType="fitCenter" />-->
            <!--<ImageView-->
            <!--android:id="@+id/imv_post_image"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e1e1"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<Button-->
            <!--android:gravity="left|center_vertical"-->
            <!--android:drawablePadding="6dp"-->
            <!--android:drawableLeft="@drawable/ic_love"-->
            <!--android:id="@+id/btn_love"-->
            <!--android:text="12 like"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->

            <!--/>-->

            <TextView
                android:id="@+id/tv_post_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_likexml"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:text="112 like"
                android:textColor="@color/text"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center">

            <!--<Button-->
            <!--android:id="@+id/btn_cmt"-->
            <!--android:layout_width="25dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:background="@drawable/ic_comment" />-->

            <TextView
                android:id="@+id/tv_post_cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:drawableLeft="@drawable/ic_commentxml"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:text="commnet"
                android:textColor="@color/text" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_sha" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>