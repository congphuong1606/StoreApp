<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_avatar_post_store"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@drawable/ic_noavatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/btn_menu"
            android:layout_toRightOf="@+id/imv_avatar_post_store"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="CƠ KHÍ MINH ÁI"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_post_time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="10:30 sáng"
                android:textColor="#d6c7c7" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="#fff"
            android:padding="5dp"
            android:text="..."
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="abifbibcfobc\nfvrffrev\nf\nfecvf\ndfvfev\n\nsc\n\cdb" />

        <ImageView
            android:id="@+id/imv_post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e1e1"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<Button-->
            <!--android:gravity="left|center_vertical"-->
            <!--android:drawablePadding="6dp"-->
            <!--android:drawableLeft="@drawable/ic_love"-->
            <!--android:id="@+id/btn_love"-->
            <!--android:text="12 like"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->

            <!--/>-->

            <TextView
                android:id="@+id/tv_post_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/iclove"
                android:gravity="left|center_vertical"
                android:text="112 like"
                android:textColor="#f17a7a" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center">

            <!--<Button-->
                <!--android:id="@+id/btn_cmt"-->
                <!--android:layout_width="25dp"-->
                <!--android:layout_height="25dp"-->
                <!--android:background="@drawable/ic_comment" />-->

            <TextView
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/iccmt"
                android:gravity="left|center_vertical"
                android:id="@+id/tv_post_cmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="100 commnet" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/ic_share" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>